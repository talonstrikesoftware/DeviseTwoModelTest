<!DOCTYPE html>
<html>
<head>
  <title>DeviseTwoModelTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbr-header">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Default Home', root_path %></li>
        <% if account_signed_in? %>
          <li><%= link_to 'Default Secret', secret_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav pull-right">
        <% if account_signed_in? %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <%= current_account.name %>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Default Profile', edit_account_registration_path %></li>
              <li><%= link_to 'Default Log out', destroy_account_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to 'Default Log In', new_account_session_path %></li>
          <li><%= link_to 'Default Sign Up', new_account_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
      <% end %>
</div>

<%= yield :top_content %>

<div class="container">
  <h1><%= yield :header %></h1>
  <%= yield %>
</div>

</body>
</html>
